# ==============================================================================
# PRF - STARTUP-TIME OVERRIDES (TIER 2)
# ==============================================================================
# This file overrides .env.defaults values at container startup.
# Edit this file to customize your deployment without rebuilding images.
#
# These values take precedence over .env.defaults but can be overridden by:
#   - Command line: BACKEND_URL=example.com docker-compose up
#   - Runtime changes via UI (for TIER 3 capable settings)
# ==============================================================================

# Deployment Environment
DEPLOY_ENV=development
IN_DOCKER_CONTAINER=true

# ==============================================================================
# BACKEND CONFIGURATION
# ==============================================================================
BACKEND_URL=localhost
BACKEND_HTTP_PORT=3000
BACKEND_HTTPS_PORT=2096
BACKEND_DB=sqlite

# API Profiler self-call detection (used to rewrite external URLs to internal)
PRF_API_URL=https://localhost:2096
INTERNAL_API_URL=http://localhost:3000

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
FRONTEND_URL=localhost
FRONTEND_HTTP_PORT=4200
FRONTEND_HTTPS_PORT=2087

# ==============================================================================
# SSL CONFIGURATION
# ==============================================================================
SSL_ENABLED=true
# Note: Cert paths are set in docker-compose.yml as container paths

# ==============================================================================
# CONNECTION SETTINGS (TIER 3 - Also changeable at runtime)
# ==============================================================================
BACKEND_PREFER_HTTPS=false
CONNECTION_RETRY_INTERVAL=3000
CONNECTION_MAX_RETRY_TIME=60000
CONNECTION_TIMEOUT=30000

# ==============================================================================
# LOGGING & DEBUG
# ==============================================================================
LOG_LEVEL=INFO
CORS_ENABLED=true